    @RenderSection("scripts", required: false)

</head>
<body>

    <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
        <a href="@Url.Action("Index", "Home")" class="navbar-brand"><i class="fa fa-home"></i></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        @Localizer["Customer"]
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <a class="dropdown-item" href="@Url.Action("Add", "Customer")">@Localizer["AddCustomer"]</a>
                        <a class="dropdown-item" href="@Url.Action("Index", "Customer")">@Localizer["ListCustomer"]</a>
                    </div>
                </li>
            </ul>
            @using (Html.BeginForm("Search", "Customer", FormMethod.Post, new { @class = "form-inline mt-2 mt-md-0" }))
        {
            @Html.AntiForgeryToken()
            <div class="form-group">
                <input type="text" name="customer" class="form-control mr-sm-2" placeholder="@Localizer["SearchCustomer"]">
            </div>
            <button type="submit" class="btn btn-outline-success my-2 my-sm-0"><i class="fa fa-search"></i>&nbsp;@Localizer["Search"]</button>
    }
