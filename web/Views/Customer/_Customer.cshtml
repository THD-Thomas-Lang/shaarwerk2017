@using Microsoft.AspNetCore.Mvc.Localization
@model web.Models.Customer.CustomerDto
@inject IViewLocalizer Localizer
<div class="form-group">
    @Html.HiddenFor(model => model.CustomerId)
    @Html.HiddenFor(model => model.Number)
</div>
<div class="form-group">
    <span class="fa fa-exclamation-triangle fa-2x"></span>
    @Html.LabelFor(model => model.Salutation)
    @Html.TextBoxFor(model => model.Salutation, null, new { @class = "form-control", placeholder = Localizer["SalutationInput"].Value })
    @Html.ValidationMessageFor(model => model.Salutation, "", new { @class = "text-danger" })
</div>

<div class="form-group">
    <span class="fa fa-exclamation-triangle fa-2x"></span>
    @Html.LabelFor(model => model.FirstName)
    @Html.TextBoxFor(model => model.FirstName, null, new { @class = "form-control", placeholder = Localizer["FirstNameInput"].Value })
    @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
</div>

<div class="form-group">
    <span class="fa fa-exclamation-triangle fa-2x"></span>
    @Html.LabelFor(model => model.LastName)
    @Html.TextBoxFor(model => model.LastName, null, new { @class = "form-control", placeholder = Localizer["LastNameInput"].Value })
    @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
</div>

<div class="form-group">
    <label for="customerBirthDay">@Localizer["BirthDateInput"].Value</label>
    <div class="input-group date" data-target-input="nearest" id="customerBirthDay">
        <input type="text" name="BirthDay" class="form-control datetimepicker-input" data-target="#customerBirthDay" value="@Model.BirthDay" />
        <div class="input-group-append" data-target="#customerBirthDay" data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
        </div>
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(model => model.Memo)
    @Html.TextAreaFor(model => model.Memo, new { @class = "form-control" })
    @Html.ValidationMessageFor(model => model.Memo, "", new { @class = "text-danger" })
</div>
